# ========================================
# School Management System - Environment Variables
# ========================================

# ========================================
# DATABASE CONFIGURATION
# ========================================

# MySQL Database URLs
DB_URL=jdbc:mysql://localhost:3306/school_fee_register?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_URL_AUTH=jdbc:mysql://localhost:3306/school_auth_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true

# Database Credentials
DB_USERNAME=schooluser
DB_PASSWORD=schoolpass
MYSQL_ROOT_PASSWORD=rootpassword

# ========================================
# SECURITY & AUTHENTICATION
# ========================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-256-bits
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Admin Access
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ========================================
# API & FRONTEND CONFIGURATION
# ========================================

# Frontend Environment Variables
REACT_APP_API_BASE_URL=https://api.yourdomain.com
REACT_APP_AUTH_API_BASE_URL=https://auth.yourdomain.com
REACT_APP_NAME=Kidsy School Management System
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com,https://www.yourdomain.com

# ========================================
# PAYMENT GATEWAY (RAZORPAY)
# ========================================

# Development Keys (for testing)
RAZORPAY_KEY_ID=rzp_test_YOUR_TEST_KEY_ID
RAZORPAY_KEY_SECRET=YOUR_TEST_SECRET_KEY

# Production Keys (for live payments)
# RAZORPAY_KEY_ID=rzp_live_your_live_key
# RAZORPAY_KEY_SECRET=your_live_secret_key

# Razorpay Configuration
RAZORPAY_CURRENCY=INR
RAZORPAY_COMPANY_NAME=Kidsy
RAZORPAY_COMPANY_DESCRIPTION=Kidsy School Management System
RAZORPAY_COMPANY_LOGO=https://yourdomain.com/logo.png
RAZORPAY_COMPANY_COLOR=#1976d2

# ========================================
# SERVICE DISCOVERY
# ========================================

# Eureka Server
EUREKA_URL=http://localhost:8761/eureka/

# ========================================
# MONITORING & ANALYTICS
# ========================================

# Google Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_TRACKING=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_HTTPS=true
REACT_APP_ENABLE_CSP=true
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_ENABLE_CACHE=true

# ========================================
# PERFORMANCE & CACHING
# ========================================

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Database Connection Pool
DB_MAX_POOL_SIZE=20
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Log Levels
LOG_LEVEL_ROOT=WARN
LOG_LEVEL_APP=INFO
LOG_LEVEL_SPRING=WARN
LOG_LEVEL_HIBERNATE=WARN

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================

# File Upload Limits
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# ========================================
# SESSION CONFIGURATION
# ========================================

# Session Timeout
SESSION_TIMEOUT=30m

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ========================================
# SMS CONFIGURATION (Optional)
# ========================================

# SMS Gateway (e.g., Twilio)
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890

# ========================================
# CLOUD STORAGE (Optional)
# ========================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# ========================================
# ENVIRONMENT SPECIFIC
# ========================================

# Development
# SPRING_PROFILES_ACTIVE=dev
# REACT_APP_ENVIRONMENT=development

# Production
# SPRING_PROFILES_ACTIVE=prod
# REACT_APP_ENVIRONMENT=production

# ========================================
# NOTES
# ========================================

# 1. Replace 'yourdomain.com' with your actual domain
# 2. Generate a strong JWT_SECRET (256 bits minimum)
# 3. Use different keys for development and production
# 4. Keep sensitive information secure
# 5. Use environment-specific values for different deployments 