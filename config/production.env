# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================

# Database Configuration
DB_HOST=production-db-host
DB_PORT=3306
DB_NAME=school_fee_register_prod
DB_USERNAME=school_fee_prod_user
DB_PASSWORD=STRONG_PRODUCTION_PASSWORD_HERE

# JWT Configuration
JWT_SECRET=YOUR_SUPER_SECURE_JWT_SECRET_KEY_FOR_PRODUCTION_2024
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=notifications@yourschool.com
SMTP_PASSWORD=YOUR_SMTP_APP_PASSWORD
SMTP_ENCRYPTION=tls

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_NUMBER_ID=YOUR_PHONE_NUMBER_ID
WHATSAPP_ACCESS_TOKEN=YOUR_ACCESS_TOKEN

# Application Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
APPLICATION_NAME=School Fee Register
APPLICATION_VERSION=1.0.0

# Eureka Server Configuration
EUREKA_SERVER_URL=https://eureka.yourschool.com
EUREKA_INSTANCE_HOSTNAME=api.yourschool.com
EUREKA_INSTANCE_PREFER_IP_ADDRESS=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/school-fee-register
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Security Configuration
CORS_ALLOWED_ORIGINS=https://app.yourschool.com,https://mobile.yourschool.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# File Upload Configuration
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png
UPLOAD_PATH=/var/uploads/school-fee-register

# Monitoring Configuration
ACTUATOR_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Cache Configuration
REDIS_HOST=redis.yourschool.com
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_DATABASE=0

# External Services
PAYMENT_GATEWAY_URL=https://payment.yourschool.com
PAYMENT_GATEWAY_API_KEY=YOUR_PAYMENT_GATEWAY_API_KEY
PAYMENT_GATEWAY_SECRET=YOUR_PAYMENT_GATEWAY_SECRET

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/school-fee-register

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_KEYSTORE_PATH=/etc/ssl/certs/school-fee-register.p12
SSL_KEYSTORE_PASSWORD=YOUR_SSL_KEYSTORE_PASSWORD

# Performance Configuration
CONNECTION_POOL_SIZE=20
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
READ_TIMEOUT=30000

# Feature Flags
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_WHATSAPP_NOTIFICATIONS=true
FEATURE_PAYMENT_GATEWAY=true
FEATURE_FILE_UPLOADS=true
FEATURE_MULTILINGUAL=true 