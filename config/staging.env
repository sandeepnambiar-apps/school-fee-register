# ========================================
# STAGING ENVIRONMENT CONFIGURATION
# ========================================

# Database Configuration
DB_HOST=staging-db-host
DB_PORT=3306
DB_NAME=school_fee_register_staging
DB_USERNAME=school_fee_staging_user
DB_PASSWORD=STRONG_STAGING_PASSWORD_HERE

# JWT Configuration
JWT_SECRET=YOUR_STAGING_JWT_SECRET_KEY_2024
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=staging@yourschool.com
SMTP_PASSWORD=YOUR_STAGING_SMTP_PASSWORD
SMTP_ENCRYPTION=tls

# SMS Configuration (Twilio - Test Account)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_TEST_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_TEST_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API (Test)
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_NUMBER_ID=YOUR_TEST_PHONE_NUMBER_ID
WHATSAPP_ACCESS_TOKEN=YOUR_TEST_ACCESS_TOKEN

# Application Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
APPLICATION_NAME=School Fee Register (Staging)
APPLICATION_VERSION=1.0.0

# Eureka Server Configuration
EUREKA_SERVER_URL=https://staging-eureka.yourschool.com
EUREKA_INSTANCE_HOSTNAME=staging-api.yourschool.com
EUREKA_INSTANCE_PREFER_IP_ADDRESS=false

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE_PATH=/var/log/school-fee-register-staging
LOG_MAX_SIZE=50MB
LOG_MAX_FILES=5

# Security Configuration
CORS_ALLOWED_ORIGINS=https://staging-app.yourschool.com,https://staging-mobile.yourschool.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=200
RATE_LIMIT_BURST_SIZE=50

# File Upload Configuration
MAX_FILE_SIZE=5MB
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png
UPLOAD_PATH=/var/uploads/school-fee-register-staging

# Monitoring Configuration
ACTUATOR_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Cache Configuration
REDIS_HOST=staging-redis.yourschool.com
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_STAGING_REDIS_PASSWORD
REDIS_DATABASE=1

# External Services (Test)
PAYMENT_GATEWAY_URL=https://staging-payment.yourschool.com
PAYMENT_GATEWAY_API_KEY=YOUR_STAGING_PAYMENT_API_KEY
PAYMENT_GATEWAY_SECRET=YOUR_STAGING_PAYMENT_SECRET

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/var/backups/school-fee-register-staging

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_KEYSTORE_PATH=/etc/ssl/certs/school-fee-register-staging.p12
SSL_KEYSTORE_PASSWORD=YOUR_STAGING_SSL_PASSWORD

# Performance Configuration
CONNECTION_POOL_SIZE=10
MAX_CONNECTIONS=50
CONNECTION_TIMEOUT=30000
READ_TIMEOUT=30000

# Feature Flags
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_WHATSAPP_NOTIFICATIONS=true
FEATURE_PAYMENT_GATEWAY=true
FEATURE_FILE_UPLOADS=true
FEATURE_MULTILINGUAL=true 